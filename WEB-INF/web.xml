<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginAdminServlet</servlet-name>
        <servlet-class>controller.LoginAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAdminServlet</servlet-name>
        <servlet-class>controller.LogoutAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCustServlet</servlet-name>
        <servlet-class>controller.LoginCustServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutCustServlet</servlet-name>
        <servlet-class>controller.LogoutCustServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegCustServlet</servlet-name>
        <servlet-class>controller.RegCustServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAdminServlet</servlet-name>
        <url-pattern>/LoginAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAdminServlet</servlet-name>
        <url-pattern>/LogoutAdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCustServlet</servlet-name>
        <url-pattern>/LoginCustServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutCustServlet</servlet-name>
        <url-pattern>/LogoutCustServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegCustServlet</servlet-name>
        <url-pattern>/RegCustServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
